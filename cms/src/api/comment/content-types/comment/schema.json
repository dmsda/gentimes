{
  "kind": "collectionType",
  "collectionName": "comments",
  "info": {
    "singularName": "comment",
    "pluralName": "comments",
    "displayName": "Comment",
    "description": "Article comments"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "content": {
      "type": "text",
      "required": true,
      "maxLength": 1000
    },
    "authorName": {
      "type": "string",
      "required": true
    },
    "authorEmail": {
      "type": "email",
      "required": true
    },
    "article": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::article.article"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "approved", "rejected"],
      "default": "pending"
    },
    "parentComment": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::comment.comment"
    }
  }
}
